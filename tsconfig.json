{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowUnreachableCode": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "jsx": "react",

    "lib": ["dom", "es6", "es2017"],

    "target": "es5",
  },
  "include": [
    "./src/**/*"
  ],
  "alias": {
    "pages": "./src/pages",
    "components": "./src/components",
    "constants": "./src/constants",
  }
}
