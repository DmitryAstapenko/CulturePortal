{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "allowUnreachableCode": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "jsx": "react",

    "lib": ["dom", "es2017"],

    "target": "es5",
  },
  "include": [
    "./src/**/*"
  ]
}
